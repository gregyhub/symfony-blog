{% extends 'layout.html.twig' %}



{% block content %}
    <h1>Connexion</h1>
    {% if error %}
        <div class="alert alert-danger">
            identification impossible
        </div>
    {% endif %}
    <form action="" method="post">
        <div class="form-group">
            <label for="_username">Email</label>
            <input type="email" class="form-control" id="_username" name="_username" value="{{ last_username }}">
            <!-- le name "_username" est indispensable pour mapper sur la class User -->
        </div>
        <div class="form-group">
            <label for="_password">Mot de passe</label>
            <input type="password" class="form-control"id="_password" name="_password">
            <!-- le name "_password" est indispensable pour mapper sur la class User -->
        </div>
    
        <div class="form-btn-group pull-right">
            <button type="submit" class="btn btn-primary">Se connecter</button>
        </div>
    </form>
{% endblock %}
